<h1>News Scraper</h1>

<h2>Comments!</h2>

<ul>
  {{#each comments}}
    {{#unless this.delete}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">Delete Comment</button>
        </form>

        {{> comments/delete-comment}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Deleted Comments</h2>

<ul>
  {{#each comments}}
    {{#if this.delete}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">
          <button type="submit">WAKE UP!</button>
        </form>

        {{> comments/delete-comment}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Comment</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Comment Title:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="remove">Delete?</label><br>
    <input type="radio" name="remove" value="1" checked> Deleted<br>
    <input type="radio" name="remove" value="0"> Added
  </div>

  <button type="submit">Add Comment</button>
</form>